#!/bin/bash
base_name="cooperation-portalservice"
container_svr_name="${base_name}_$(hostname -s)"

CONTAINER_NAME=$(docker ps --all -f name=${container_svr_name} -q)
if [ "$CONTAINER_NAME" != "" ];then
    docker stop $CONTAINER_NAME
    docker rm $CONTAINER_NAME
fi
#consul_host={{CONSUL_HOST}}

consul_host={{ ansible_default_ipv4.address }}
docker run -d --name ${container_svr_name} --restart=always -e dev_meta=http://{{ansible_default_ipv4.address}}:50000/ \
           -e data_url={{DB_HOST}}:{{SQL_PORT}} \
           -e data_username={{SQL_USER}} -e data_password='{{SQL_PASS}}' \
           -e consul_host=$consul_host -e consul_port={{CONSUL_PORT}} -e acl_token={{CONSUL_TOKEN}} \
           --net=host deploy.bocloud/paas/paas-business-config-portal:{{RELEASE_TAGS}}

sleep 5

svr_runing=$(docker ps -a | grep "${container_svr_name}" | egrep "Up [About]|[0-9]{1,}")
if [[ ${svr_runing} == "" ]];
then
    echo -e "\nError: ${base_name} failed to start...\n"
    exit 1
fi
